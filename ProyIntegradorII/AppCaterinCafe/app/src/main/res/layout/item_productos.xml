<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/idArticulo"
        android:text=""/>
    <TextView
        android:id="@+id/txtDesc"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_below="@+id/imgDetalle"
        android:layout_alignStart="@+id/imgDetalle" />

    <ImageView
        android:id="@+id/imgDetalle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/food_icon"
        android:layout_marginTop="17dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:text="TextView"
        android:layout_below="@+id/txtDesc"
        android:layout_alignStart="@+id/txtDesc"
        android:layout_alignEnd="@+id/txtDesc" />

    <TextView
        android:id="@+id/txtTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_below="@+id/txtPrecio"
        android:layout_alignEnd="@+id/txtPrecio"
        android:layout_alignStart="@+id/txtPrecio" />

</RelativeLayout>